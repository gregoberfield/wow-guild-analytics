# WoW Guild Analytics - Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: .env is in .gitignore - never commit it to your repository!

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
# DB_TYPE: 'sqlite' for dev/staging, 'postgresql' for production
DB_TYPE=sqlite

# SQLite Database (used when DB_TYPE=sqlite)
DATABASE_URL=sqlite:///guild_data.db

# PostgreSQL / Azure Cosmos DB for PostgreSQL (used when DB_TYPE=postgresql)
# Get these from Azure Portal > Your Cosmos DB > Settings > Connection strings
POSTGRES_HOST=your-cosmos-cluster.postgres.cosmos.azure.com
POSTGRES_PORT=5432
POSTGRES_DB=citus
POSTGRES_USER=citus
POSTGRES_PASSWORD=your-password-here
POSTGRES_SSL_MODE=require

# PostgreSQL Connection Pool Settings (optional, only used when DB_TYPE=postgresql)
DB_POOL_SIZE=10
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=20

# Battle.net API Credentials (REQUIRED)
# Get these from https://develop.battle.net/access/clients
BNET_CLIENT_ID=your-client-id-here
BNET_CLIENT_SECRET=your-client-secret-here
BNET_REGION=us

# Azure OpenAI Configuration (OPTIONAL - for AI Raid Composer feature)
# Get these from https://portal.azure.com/ (Azure OpenAI Service)
# If not configured, the app will work but AI Raid Composer will be disabled
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Guild Configuration (optional - can be set via web interface)
GUILD_NAME=YourGuildName
GUILD_REALM=YourRealmName
GUILD_REALM_SLUG=your-realm-slug

# API Retry Configuration (optional - for handling transient API errors)
# Maximum number of retry attempts for failed API calls (504, 503, 500, timeouts)
API_MAX_RETRIES=3
# Initial retry delay in seconds (uses exponential backoff: 1s, 2s, 4s, etc.)
API_RETRY_DELAY=1.0
